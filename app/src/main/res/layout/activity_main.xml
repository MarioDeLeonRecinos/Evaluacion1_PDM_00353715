<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_marginTop="@dimen/m_size_8dp"
        android:layout_marginBottom="@dimen/m_size_8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contador_de_productos"
        android:layout_gravity="center"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/Producto1"
            android:layout_margin="@dimen/m_size_8dp"
            android:layout_width="@dimen/box_size_120dp"
            android:layout_height="@dimen/box_size_120dp"
            android:orientation="vertical"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:layout_column="0"
            android:layout_row="0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_size_15dp"
                android:gravity="center"
                android:textSize="18dp"
                android:text="Producto 1"/>

            <TextView
                android:id="@+id/num1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#"
                android:gravity="center"
                android:textSize="25dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Producto2"
            android:layout_margin="@dimen/m_size_8dp"
            android:layout_width="@dimen/box_size_120dp"
            android:layout_height="@dimen/box_size_120dp"
            android:orientation="vertical"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:layout_column="1"
            android:layout_row="0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_size_15dp"
                android:gravity="center"
                android:textSize="18dp"
                android:text="Producto 2"/>

            <TextView
                android:id="@+id/num2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#"
                android:gravity="center"
                android:textSize="25dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Producto3"
            android:layout_margin="@dimen/m_size_8dp"
            android:layout_width="@dimen/box_size_120dp"
            android:layout_height="@dimen/box_size_120dp"
            android:orientation="vertical"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:layout_column="2"
            android:layout_row="0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_size_15dp"
                android:gravity="center"
                android:textSize="18dp"
                android:text="Producto 3"/>

            <TextView

                android:id="@+id/num3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#"
                android:gravity="center"
                android:textSize="25dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Producto4"
            android:layout_margin="@dimen/m_size_8dp"
            android:layout_width="@dimen/box_size_120dp"
            android:layout_height="@dimen/box_size_120dp"
            android:orientation="vertical"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:layout_column="0"
            android:layout_row="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_size_15dp"
                android:gravity="center"
                android:textSize="18dp"
                android:text="Producto 4"/>

            <TextView
                android:id="@+id/num4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#"
                android:gravity="center"
                android:textSize="25dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Producto5"
            android:layout_margin="@dimen/m_size_8dp"
            android:layout_width="@dimen/box_size_120dp"
            android:layout_height="@dimen/box_size_120dp"
            android:orientation="vertical"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:layout_column="1"
            android:layout_row="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_size_15dp"
                android:gravity="center"
                android:textSize="18dp"
                android:text="Producto 5"/>

            <TextView
                android:id="@+id/num5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#"
                android:gravity="center"
                android:textSize="25dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Producto6"
            android:layout_margin="@dimen/m_size_8dp"
            android:layout_width="@dimen/box_size_120dp"
            android:layout_height="@dimen/box_size_120dp"
            android:orientation="vertical"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:layout_column="2"
            android:layout_row="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_size_15dp"
                android:gravity="center"
                android:textSize="18dp"
                android:text="Producto 6"/>

            <TextView
                android:id="@+id/num6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#"
                android:gravity="center"
                android:textSize="25dp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/Producto7"
            android:layout_margin="@dimen/m_size_8dp"
            android:layout_width="@dimen/box_size_120dp"
            android:layout_height="@dimen/box_size_120dp"
            android:orientation="vertical"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:layout_column="0"
            android:layout_row="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_size_15dp"
                android:gravity="center"
                android:textSize="18dp"
                android:text="Producto 7"/>

            <TextView
                android:id="@+id/num7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#"
                android:gravity="center"
                android:textSize="25dp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/Producto8"
            android:layout_margin="@dimen/m_size_8dp"
            android:layout_width="@dimen/box_size_120dp"
            android:layout_height="@dimen/box_size_120dp"
            android:orientation="vertical"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:layout_column="1"
            android:layout_row="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_size_15dp"
                android:gravity="center"
                android:textSize="18dp"
                android:text="Producto 8"/>

            <TextView
                android:id="@+id/num8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#"
                android:gravity="center"
                android:textSize="25dp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/Producto9"
            android:layout_margin="@dimen/m_size_8dp"
            android:layout_width="@dimen/box_size_120dp"
            android:layout_height="@dimen/box_size_120dp"
            android:orientation="vertical"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:layout_column="2"
            android:layout_row="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_size_15dp"
                android:gravity="center"
                android:textSize="18dp"
                android:text="Producto 9"/>

            <TextView
                android:id="@+id/num9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#"
                android:gravity="center"
                android:textSize="25dp"/>

        </LinearLayout>

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/m_size_8dp"
        android:layout_marginRight="@dimen/m_size_8dp"
        android:layout_marginTop="@dimen/margin_size_15dp">

        <TextView
            android:textSize="@dimen/text_size_18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Usuario"/>

        <EditText
            android:id="@+id/user"
            android:layout_marginTop="@dimen/m_size_8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hee Heee"
            android:textSize="@dimen/text_size_18sp"/>

        <TextView
            android:textSize="@dimen/text_size_18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correo Electronico"/>

        <EditText
            android:id="@+id/user_email"
            android:layout_marginTop="@dimen/m_size_8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hee Heee"
            android:textSize="@dimen/text_size_18sp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/m_size_8dp"
            android:text="@string/enviar"/>

    </LinearLayout>

</LinearLayout>